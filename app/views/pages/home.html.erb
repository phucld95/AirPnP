<div class="row">
  <div class="col-md-9 banner">
    <h1><span class="text-red"><%= t ".airbnb" %></span>
      <%= t ".book_unique_homes_and_experience_a_city_like_a_local" %>
    </h1>
  </div>
</div>


<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: t(".where_are_you_going"), class: "form-control", id: "autolocation" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :start_date, params[:start_date],readonly: true, placeholder: t(".start_date"), class: "form-control datepicker" %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :end_date, params[:end_date], readonly: true, placeholder: t(".end_date"), class: "form-control datepicker" %>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag t(".search"), class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<!-- Home -->

<div>
  <h3 class="home-title">Home</h3>
</div>
<div class="row">
  <%= render partial: "rooms/rooms", locals: {rooms: @rooms} %>
</div>

<!-- Cities -->

<div>
  <h3 class="home-title"><%= t ".cities" %></h3>
</div>

<div class="row">
  <% if !@cities.nil? %>
    <% @cities.each do |city| %>
      <div class="col-md-4 col-sm-12">
        <% if city.id == 1 %>
            <%= link_to "http://localhost:3000/search?utf8=%E2%9C%93&search=London%2C+United+Kingdom&start_date=&end_date=&commit=Search" do %>
                <div class="discovery-card" style="background-image: url('<%= city.image %>')">
                  <div class="text-container">
                    <div class="text-middle text-center">
                      <h2><%= city.name %></h2>
                    </div>
                  </div>
                </div>
            <% end %>
        <% elsif city.id == 2 %>
            <%= link_to "http://localhost:3000/search?utf8=%E2%9C%93&search=Beijing%2C+China&start_date=&end_date=&commit=Search" do %>
                <div class="discovery-card" style="background-image: url('<%= city.image %>')">
                  <div class="text-container">
                    <div class="text-middle text-center">
                      <h2><%= city.name %></h2>
                    </div>
                  </div>
                </div>
            <% end %>
        <% elsif city.id == 3 %>
            <%= link_to "http://localhost:3000/search?utf8=%E2%9C%93&search=Cairo+Governorate%2C+Egypt&start_date=&end_date=&commit=Search" do %>
                <div class="discovery-card" style="background-image: url('<%= city.image %>')">
                  <div class="text-container">
                    <div class="text-middle text-center">
                      <h2><%= city.name %></h2>
                    </div>
                  </div>
                </div>
            <% end %>
        <% elsif city.id == 4 %>
            <%= link_to "http://localhost:3000/search?utf8=%E2%9C%93&search=Paris%2C+France&start_date=&end_date=&commit=Search" do %>
                <div class="discovery-card" style="background-image: url('<%= city.image %>')">
                  <div class="text-container">
                    <div class="text-middle text-center">
                      <h2><%= city.name %></h2>
                    </div>
                  </div>
                </div>
            <% end %>
        <% elsif city.id == 5 %>
            <%= link_to "http://localhost:3000/search?utf8=%E2%9C%93&search=New+York%2C+NY%2C+United+States&start_date=&end_date=&commit=Search" do %>
                <div class="discovery-card" style="background-image: url('<%= city.image %>')">
                  <div class="text-container">
                    <div class="text-middle text-center">
                      <h2><%= city.name %></h2>
                    </div>
                  </div>
                </div>
            <% end %>
        <% else %>
          <%= link_to "http://localhost:3000/search?utf8=%E2%9C%93&search=Tokyo%2C+Japan&start_date=&end_date=&commit=Search" do %>
            <div class="discovery-card" style="background-image: url('<%= city.image %>')">
              <div class="text-container">
                <div class="text-middle text-center">
                  <h2><%= city.name %></h2>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<br>


<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected){
      $('#end_date').datepicker("option", "minDate", selected);
      $('#end_date').attr("disabled", false);
    }
  });
  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected){
      $('#start_date').datepicker("option", "maxDate", selected);
    }
  });

  $(function(){
    $('#autolocation').geocomplete();
  })
</script>
