<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to t(".your_listings"), rooms_path, class: "sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to t(".your_reservation"), your_reservations_path, class: "sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to t(".your_trips"), your_trips_path, class: "sidebar-link active" %>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <%= t(".your_trips") %>
      </div>
      <div class="card-block">
        <% @trips.each do |trip| %>
          <div class="row">
            <div class="col-md-2">
              <%= trip.start_date.strftime('%v') %>
              <br>
              <%= trip.status %>
            </div>
            <div class="col-md-2">
              <%= link_to room_path(trip.room) do  %>
                <%= image_tag trip.room.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-5">
              <%= link_to trip.room.listing_name, room_path(trip.room_id), class: "room-listing-name" %>
              <br>
              <span>
                <%= image_tag avatar_url(trip.room.user), class: "rounded-circle avatar-small" %>
                <%= link_to user_path(trip.room.user) do  %>
                  <%= trip.room.user.fullname %>
                <% end %>
              </span>
            </div>
            <% if trip.Approved? %>
              <div class="col-md-3 text-right">
                <%= render partial: "reviews/guest_form", locals: {reservation: trip} %>
              </div>
            <% end %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
